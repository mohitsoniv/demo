pipeline {
    agent any

    stages {
        stage('Checkout Stage') {
            steps {
                git url: 'https://github.com/mohitsoniv/demo.git'
            }
        }

        stage('Build Stage') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Test Stage') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Deploy Stage') {
            steps {
                // sh 'mvn deploy'
                echo 'Deploy step is currently commented out.'
            }
        }
   }
   post {
       success {
           echo 'Pipeline completed successfully!'
       }
       failure {
           echo 'Pipeline failed. Please check the logs.'
       }
       always {
        echo 'Cleanup/notifications can go here.'
   }
}
}

       
