pipeline {
    agent any

    stages {
        stage('Checkout Stage') {
            steps {
                git url: 'https://github.com/mohitsoniv/demo.git'
            }
        }

        stage('Build Stage') {
            steps {
                bat 'mvn clean package'
            }
        }

        stage('Test Stage') {
            steps {
                bat 'mvn test'
            }
        }

        stage('Deploy Stage') {
            steps {
                // bat 'mvn deploy'
            }
        }
    }
}
